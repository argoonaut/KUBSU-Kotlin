<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="false"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/TextInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#4C4C4C"
        android:ems="10"
        android:gravity="right"
        android:inputType="numberDecimal"
        android:paddingTop="21pt"
        android:textColor="#ffffff"
        android:textSize="45sp" />

    <TextView
        android:id="@+id/TextOperation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#4C4C4C"
        android:ems="10"
        android:gravity="right"
        android:inputType="textPersonName"
        android:paddingTop="22pt"
        android:textColor="#ffffff"
        android:textSize="45sp" />

    <TextView
        android:id="@+id/TextResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#4C4C4C"
        android:ems="10"
        android:gravity="right"
        android:inputType="textPersonName"
        android:paddingTop="21pt"
        android:textColor="#ffffff"
        android:textSize="45sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#4C4C4C"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_AC"
            android:layout_width="201dp"
            android:layout_height="40pt"
            android:layout_marginRight="1pt"
            android:layout_weight="1"
            android:background="#E0E0E0"
            android:onClick="buNumberEvent"
            android:text="AC"
            android:textSize="18sp" />

        <Button
            android:id="@+id/button_C"
            android:layout_width="107dp"
            android:layout_height="40pt"
            android:layout_marginRight="1pt"
            android:layout_weight="1"
            android:background="#E0E0E0"
            android:onClick="buNumberEvent"
            android:text="C"
            android:textSize="18sp" />

        <Button
            android:id="@+id/button_Division"
            android:layout_width="106dp"
            android:layout_height="40pt"
            android:layout_marginRight="1pt"
            android:layout_weight="2"
            android:background="#EC9649"
            android:onClick="buttonEqualEvent"
            android:text="รท"
            android:textColor="#ffffff"
            android:textSize="18sp" />
    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#4C4C4C">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="1pt"
            android:layout_marginBottom="1pt">

            <Button
                android:id="@+id/button_7"
                android:layout_width="45pt"
                android:layout_height="45pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="#E0E0E0"
                android:onClick="buNumberEvent"
                android:text="7"
                android:textSize="18sp" />

            <Button
                android:id="@+id/button_8"
                android:layout_width="45pt"
                android:layout_height="45pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="#E0E0E0"
                android:onClick="buNumberEvent"
                android:text="8"
                android:textSize="18sp" />

            <Button
                android:id="@+id/button_9"
                android:layout_width="45pt"
                android:layout_height="45pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="#E0E0E0"
                android:onClick="buNumberEvent"
                android:text="9"
                android:textSize="18sp" />

            <Button
                android:id="@+id/button_Multiplication"
                android:layout_width="45pt"
                android:layout_height="45pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="#EC9649"
                android:onClick="buttonDivEvent"
                android:text="X"
                android:textColor="#ffffff"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="1pt">

            <Button
                android:id="@+id/button_4"
                android:layout_width="45pt"
                android:layout_height="45pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="#E0E0E0"
                android:onClick="buNumberEvent"
                android:text="4"
                android:textSize="18sp" />

            <Button
                android:id="@+id/button_5"
                android:layout_width="45pt"
                android:layout_height="45pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="#E0E0E0"
                android:onClick="buNumberEvent"
                android:text="5"
                android:textSize="18sp" />

            <Button
                android:id="@+id/button_6"
                android:layout_width="45pt"
                android:layout_height="45pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="#E0E0E0"
                android:onClick="buNumberEvent"
                android:text="6"
                android:textSize="18sp" />

            <Button
                android:id="@+id/button_Subtraction"
                android:layout_width="45pt"
                android:layout_height="45pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="#EC9649"
                android:onClick="buttonDivEvent"
                android:text="-"
                android:textColor="#ffffff"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="1pt">

            <Button
                android:id="@+id/button_1"
                android:layout_width="45pt"
                android:layout_height="45pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="#E0E0E0"
                android:onClick="buNumberEvent"
                android:text="1"
                android:textSize="18sp" />

            <Button
                android:id="@+id/button_2"
                android:layout_width="45pt"
                android:layout_height="45pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="#E0E0E0"
                android:onClick="buNumberEvent"
                android:text="2"
                android:textSize="18sp" />

            <Button
                android:id="@+id/button_3"
                android:layout_width="45pt"
                android:layout_height="45pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="#E0E0E0"
                android:onClick="buNumberEvent"
                android:text="3"
                android:textSize="18sp" />

            <Button
                android:id="@+id/button_Sum"
                android:layout_width="45pt"
                android:layout_height="45pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="#EC9649"
                android:onClick="buttonDivEvent"
                android:text="+"
                android:textColor="#ffffff"
                android:textSize="18sp" />
        </TableRow>

    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#4C4C4C"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_0"
            android:layout_width="201dp"
            android:layout_height="40pt"
            android:layout_marginRight="1pt"
            android:layout_weight="1"
            android:background="#E0E0E0"
            android:onClick="buNumberEvent"
            android:text="0"
            android:textSize="18sp" />

        <Button
            android:id="@+id/button_Dot"
            android:layout_width="107dp"
            android:layout_height="40pt"
            android:layout_marginRight="1pt"
            android:layout_weight="1"
            android:background="#E0E0E0"
            android:onClick="buNumberEvent"
            android:text="."
            android:textSize="18sp" />

        <Button
            android:id="@+id/button_Equal"
            android:layout_width="106dp"
            android:layout_height="40pt"
            android:layout_marginRight="1pt"
            android:layout_weight="2"
            android:background="#EC9649"
            android:onClick="buttonEqualEvent"
            android:text="="
            android:textColor="#ffffff"
            android:textSize="18sp" />
    </LinearLayout>
</LinearLayout>

